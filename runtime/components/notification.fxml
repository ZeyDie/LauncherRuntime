<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<!-- DrLeonardo refactor -->

<Pane fx:id="notificationPane" prefHeight="89.0" prefWidth="316.0" styleClass="blocks" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Отступы-->
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <ImageView fitHeight="89.0" fitWidth="316.0">
      <image>
         <Image url="@../images/message.png" />
      </image>
   </ImageView>

   <!-- Текст уведомления-->
   <Text id="notificationHeading" fill="WHITE" fontSmoothingType="LCD" layoutX="88.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-font-head" text="%runtime.scenes.components.notification.notificationHeading" wrappingWidth="219.7" />
   <Text id="notificationText" fill="WHITE" fontSmoothingType="LCD" layoutX="87.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-font-desc" text="%runtime.scenes.components.notification.notificationText" textAlignment="JUSTIFY" wrappingWidth="219.7" />

   <!-- Подключение стилей-->
   <stylesheets>
      <URL value="@components.css" />
      <URL value="@../styles/global.css" />
      <URL value="@../styles/variables.css" />
   </stylesheets>

</Pane>
